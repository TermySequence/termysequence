if ([ "$1" = "--help" ] || [ $# -gt 1 ]); then
    echo "Usage: @ABBREV_NAME@-su [user]" 1>&2
    exit 1
fi
if [ "$1" = "--version" ]; then
    echo "@ABBREV_NAME@-su @PROJECT_VERSION@"
    exit
fi

exec @CONNECT_NAME@ -- su -l -c @SERVER_NAME@ "$@"
